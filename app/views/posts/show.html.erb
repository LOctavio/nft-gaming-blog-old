<div class="box">
  <span class="title post-title">
    <span><%= @post.title %> by <%= @post.author.name %></span>
    <span>
      <span>Comments: <%= @post.comments_counter %>, </span>
      <span>Likes: <%= @post.likes_counter %></span>
    </span>
  </span>
  <span><%= @post.text %></span>
  <p>
    Like
    <%= link_to user_post_likes_path(@user, @post), method: :post do %>
      <i class="far fa-thumbs-up"></i>
    <% end %>
  </p>
  <% if can? :read, @post %>
    <%= button_to "delete", user_post_path(@post), :method => :delete %>
  <% end %>
</div>
<div class="comment box">
  <%= render "shared/comments", post: @post, comments: @post.comments %>
</div>