<div class="forms-section">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
    </div>
    </br>
    <div class="field">
      <%= f.hidden_field :post_counter, value: 0 %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>
    </br>
    <div class="field">
      <%= f.email_field :email_confirmation, autofocus: true, autocomplete: "email", placeholder: "Email confirmation" %>
    </div>
    </br>
    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    </div>
    </br>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation" %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>