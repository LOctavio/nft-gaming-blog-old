<%= render "shared/user", user: @user %>
<div class="bio box">
  <span class="title">Bio</span>
  <span><%= @user.bio %></span>
</div>
<% @posts.each do |post| %>
  <div class="post box">
    <span class="title"><%= post.title %></span>
    <span><%= post.text[0,200] %>...</span>
    <div class="counter">
      <span>Comments: <%= post.comments_counter %>, </span>
      <span>Likes: <%= post.likes_counter %></span>
    </div>
  </div>
<% end %>
<div class="button-container">
  <%= button_to "See all posts", user_posts_path(@user),:class => "posts-button", :method => :get %>
</div>